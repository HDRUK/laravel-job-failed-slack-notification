{
    "name": "hdruk/laravel-job-failed-slack-notification",
    "description": "Automatically sends detailed Slack notifications whenever a Laravel queued job fails, including job name, queue, connection, and exception details.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jamie Byrne",
            "email": "jamie.byrne@hdruk.ac.uk"
        }
    ],
    "require": {
        "illuminate/support": "^10.0 || ^11.0 || ^12.0",
        "laravel/slack-notification-channel": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Hdruk\\LaravelJobFailedSlackNotification\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Hdruk\\LaravelJobFailedSlackNotification\\Providers\\JobFailedSlackServiceProvider"
            ]
        }
    }
}
